{
  "definitions": {
    "address": {
      "title": "Address Details",
      "type": "object",
      "properties": {
        "line": {
          "title": "Address Line",
          "type": "array",
          "default": [],
          "items": {
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": [
              "THE LAW COURTS"
            ],
            "pattern": "^.*$"
          }
        },
        "town": {
          "title": "Town",
          "description": "The town for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridge"
          ],
          "pattern": "^.*$"
        },
        "county": {
          "title": "County",
          "description": "The county for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridgeshire"
          ],
          "pattern": "^.*$"
        },
        "postCode": {
          "title": "Address Postcode",
          "type": "string",
          "default": "",
          "examples": [
            "PR1 2LL"
          ],
          "pattern": "^.*$"
        }
      }
    },
    "venueContact": {
      "title": "Contact Details for a venue",
      "type": "object",
      "properties": {
        "venueTelephone": {
          "description": "Telephone number for the venue",
          "title": "Venue Telephone",
          "type": "string",
          "default": "",
          "examples": [
            "01772 844700"
          ],
          "pattern": "^.*$"
        },
        "venueEmail": {
          "description": "Email for the venue",
          "title": "Venue Email",
          "type": "string",
          "default": "",
          "examples": [
            "court1@moj.gov.uk"
          ],
          "pattern": "^.*$"
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "required": [
    "document",
    "courtLists",
    "venue"
  ],
  "properties": {
    "@schemaLocation": {
      "$id": "#root/@schemaLocation",
      "title": "@schemalocation",
      "type": "string",
      "default": "",
      "examples": [
        "http://json-schema.org/draft-07/schema#"
      ],
      "pattern": "^.*$"
    },
    "document": {
      "$id": "#root/document",
      "title": "document",
      "type": "object",
      "required": [
        "publicationDate"
      ],
      "properties": {
        "publicationDate": {
          "$id": "#root/document/publicationDate",
          "title": "Publication date",
          "description": "The date + time the list was published",
          "type": "string",
          "examples": [
            "2016-09-13T23:30:52.123Z"
          ]
        }
      }
    },
    "venue": {
      "$id": "#root/venue",
      "title": "venue",
      "type": "object",
      "required": [
        "venueContact"
      ],
      "properties": {
        "venueContact": {
          "$id": "#root/venue/venueContact",
          "description": "Contact details for the venue",
          "title": "Venue Contact",
          "$ref": "#/definitions/venueContact",
          "required": ["venueTelephone", "venueEmail"]
        }
      }
    },
    "locationDetails": {
      "$id": "#root/locationDetails",
      "title": "Location Details",
      "type": "object",
      "properties": {
        "jurisdiction": {
          "$id": "#root/locationDetails/jurisdiction",
          "description": "Jurisdiction",
          "title": "Jurisdiction",
          "type": "string",
          "default": "",
          "examples": [
            "Family court"
          ],
          "pattern": "^.*$"
        }
      }
    },
    "courtLists": {
      "$id": "#root/courtLists",
      "title": "Court Lists",
      "type": "array",
      "items": {
        "$id": "#root/courtLists/courtList",
        "title": "Court list",
        "type": "object",
        "required": [
          "courtHouse"
        ],
        "properties": {
          "courtHouse": {
            "$id": "#root/courtLists/courtHouse",
            "title": "Court House",
            "description": "The court house that owns the court rooms",
            "type": "object",
            "required": [
              "courtRoom",
              "courtHouseName"
            ],
            "properties": {
              "courtHouseName": {
                "$id": "#root/courtLists/courtList/courtHouse/courtHouseName",
                "description": "Name of the court house",
                "title": "Court House Name",
                "type": "string",
                "default": "",
                "examples": [
                  "PRESTON"
                ],
                "pattern": "^.*$"
              },
              "courtHouseAddress": {
                "$id": "#root/courtLists/courtList/courtHouse/courtHouseAddress",
                "description": "The address for the court house",
                "title": "Court House Address",
                "$ref": "#/definitions/address"
              },
              "courtRoom": {
                "$id": "#root/courtLists/courtRoom",
                "type": "array",
                "items": {
                  "title": "Court Room",
                  "description": "The court room that owns the court rooms",
                  "type": "object",
                  "required": [
                    "session"
                  ],
                  "properties": {
                    "session": {
                      "$id": "#root/courtLists/courtRoom/session",
                      "type": "array",
                      "items": {
                        "title": "Session",
                        "description": "Session associated with the court in the publication",
                        "type": "object",
                        "required": [
                          "sittings",
                          "sessionStartTime"
                        ],
                        "properties": {
                          "sessionStartTime": {
                            "$id": "#root/courtLists/courtRoom/session/sessionStartTime",
                            "description": "Session start time rfc3999",
                            "title": "Session start time",
                            "type": "string",
                            "examples": [
                              "2021-09-09t16:41:07.394"
                            ],
                            "default": "",
                            "pattern": "^.*$"
                          },
                          "sittings": {
                            "$id": "#root/courtLists/courtList/courtRoom/session/sittings",
                            "title": "Sittings",
                            "type": "array",
                            "default": [],
                            "items": {
                              "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items",
                              "type": "object",
                              "required": [
                                "sittingStart",
                                "sittingEnd",
                                "hearing"
                              ],
                              "properties": {
                                "sittingStart": {
                                  "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/sittingStart",
                                  "description": "Sitting Start Time",
                                  "title": "Sitting Start",
                                  "type": "string",
                                  "default": "",
                                  "examples": []
                                },
                                "sittingEnd": {
                                  "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/sittingEnd",
                                  "description": "Sitting End Time",
                                  "title": "Sitting End",
                                  "type": "string",
                                  "default": "",
                                  "examples": []
                                },
                                "hearing": {
                                  "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing",
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "required": [
                                      "case"
                                    ],
                                    "description": "Hearing details of the case and associated details for the sitting",
                                    "title": "Hearing",
                                    "properties": {
                                      "hearingType": {
                                        "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing/hearingType",
                                        "description": "Type of hearing being presented",
                                        "title": "Hearing Type",
                                        "type": "string",
                                        "examples": [
                                          "mda"
                                        ],
                                        "default": "",
                                        "pattern": "^.*$"
                                      },
                                      "case": {
                                        "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing/case",
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "title": "Case",
                                          "description": "Case Details",
                                          "required": [
                                            "caseName",
                                            "caseNumber"
                                          ],
                                          "properties": {
                                            "caseName": {
                                              "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing/case/caseName",
                                              "title": "Case Name",
                                              "description": "Case name is not always present but should be where available displayed",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "A Vs B"
                                              ],
                                              "pattern": "^.*$"
                                            },
                                            "caseNumber": {
                                              "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing/case/caseNumber",
                                              "title": "Case Number",
                                              "description": "Some systems hold two instances, i.e. it is duplicated across systems (xhibit, cp.. and a second ref number is required",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "45684548"
                                              ],
                                              "pattern": "^.*$"
                                            },
                                            "caseSequenceIndicator": {
                                              "$id": "#root/courtLists/courtList/courtRoom/session/sittings/items/hearing/case/caseSequenceIndicator",
                                              "title": "Case Sequence Indicator",
                                              "description": "The case sequence indicator",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "2 of 3"
                                              ],
                                              "pattern": "^.*$"
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
