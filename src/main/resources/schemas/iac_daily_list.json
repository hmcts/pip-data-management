{
  "$defs": {
    "venueContact": {
      "title": "Contact Details for a venue",
      "type": "object",
      "properties": {
        "venueTelephone": {
          "description": "Telephone number for the venue",
          "title": "Venue Telephone",
          "type": "string",
          "default": "",
          "examples": [
            "01772 844700"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueEmail": {
          "description": "Email for the venue",
          "title": "Venue Email",
          "type": "string",
          "default": "",
          "examples": [
            "court1@moj.gov.uk"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "judiciary": {
      "title": "Judiciary",
      "description": "An array of judiciary",
      "type": "object",
      "properties": {
        "johTitle": {
          "description": "The title for the judiciary",
          "title": "Judiciary Title",
          "type": "string",
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "johNameSurname": {
          "description": "First and Surname of the JOH",
          "title": "JOH Name",
          "type": "string",
          "examples": [
            "John Smith"
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "isPresiding": {
          "description": "A flag to indicate whether a judiciary is presiding",
          "title": "Is Presiding",
          "type": "boolean",
          "examples": [
            true
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "required": [
    "document",
    "venue",
    "courtLists"
  ],
  "properties": {
    "document": {
      "title": "document",
      "type": "object",
      "required": [
        "publicationDate"
      ],
      "properties": {
        "publicationDate": {
          "title": "Publication date",
          "description": "The date + time the list was published",
          "type": "string",
          "examples": [
            "2016-09-13T23:30:52.123Z"
          ]
        }
      }
    },
    "venue": {
      "title": "venue",
      "type": "object",
      "required": [
        "venueName",
        "venueContact"
      ],
      "properties": {
        "venueName": {
          "description": "Full venue name",
          "title": "Venue Name",
          "type": "string",
          "default": "",
          "examples": [
            "Preston"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueContact": {
          "description": "Contact details for the venue",
          "title": "Venue Contact",
          "$ref": "#/$defs/venueContact",
          "required": ["venueTelephone", "venueEmail"]
        }
      }
    },
    "courtLists": {
      "title": "Court Lists",
      "type": "array",
      "items": {
        "title": "Court list",
        "type": "object",
        "required": [
          "courtListName",
          "courtHouse"
        ],
        "properties": {
          "courtListName": {
            "title": "Sub-list Name",
            "description": "The name of the court list",
            "type": "string",
            "default": "",
            "examples": [
              "Case Management Review"
            ],
            "pattern": "^(?!.*<[^>]+>).*$"
          },
          "courtHouse": {
            "title": "Court House",
            "description": "The court house that owns the court rooms",
            "type": "object",
            "required": [
              "courtRoom"
            ],
            "properties": {
              "courtRoom": {
                "type": "array",
                "items": {
                  "title": "Court Room",
                  "description": "The court room that owns the court rooms",
                  "type": "object",
                  "required": [
                    "courtRoomName",
                    "session"
                  ],
                  "properties": {
                    "courtRoomName": {
                      "description": "Name for the court room",
                      "title": "Court Room Name",
                      "type": "string",
                      "default": "",
                      "examples": [
                        "1"
                      ],
                      "pattern": "^(?!.*<[^>]+>).*$"
                    },
                    "session": {
                      "type": "array",
                      "items": {
                        "title": "Session",
                        "description": "Session associated with the court in the publication",
                        "type": "object",
                        "required": [
                          "sittings"
                        ],
                        "properties": {
                          "judiciary": {
                            "type": "array",
                            "description": "Judiciary for the session",
                            "title": "Judiciary",
                            "items": {
                              "type": "object",
                              "$ref": "#/$defs/judiciary"
                            }
                          },
                          "sittings": {
                            "title": "Sittings",
                            "type": "array",
                            "default": [],
                            "items": {
                              "type": "object",
                              "required": [
                                "sittingStart",
                                "sittingEnd",
                                "hearing"
                              ],
                              "properties": {
                                "sittingStart": {
                                  "description": "Sitting Start Time",
                                  "title": "Sitting Start",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "sittingEnd": {
                                  "description": "Sitting End Time",
                                  "title": "Sitting End",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "hearing": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "description": "Hearing details of the case and associated details for the sitting",
                                    "title": "Hearing",
                                    "required": [
                                      "case"
                                    ],
                                    "properties": {
                                      "hearingType": {
                                        "description": "Type of hearing being presented",
                                        "title": "Hearing Type",
                                        "type": "string",
                                        "examples": [
                                          "mda"
                                        ],
                                        "default": "",
                                        "pattern": "^(?!.*<[^>]+>).*$"
                                      },
                                      "case": {
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "title": "Case",
                                          "description": "Case Details",
                                          "required": [
                                            "caseNumber"
                                          ],
                                          "properties": {
                                            "caseNumber": {
                                              "title": "Case Number",
                                              "description": "A number identifying a case",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "45684548"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "caseSequenceIndicator": {
                                              "title": "Case Sequence Indicator",
                                              "description": "The case sequence indicator",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "2 of 3"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "caseType": {
                                              "title": "Case Type",
                                              "description": "This will be type of the case.",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "normal"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "language": {
                                              "title": "Interpreter Language",
                                              "description": "Interpreter Language",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "French"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "party": {
                                              "title": "Party",
                                              "description": "Parties involved in the case (defence, prosecution)",
                                              "type": "array",
                                              "items": {
                                                "title": "Party",
                                                "description": "A party",
                                                "type": "object",
                                                "properties": {
                                                  "partyRole": {
                                                    "description": "Role of the party, selectable list of roles, i.e. prosecution, solicitor defence etc",
                                                    "title": "Party Role",
                                                    "type": "string",
                                                    "examples": [
                                                      "ACCUSED",
                                                      "PROSECUTOR"
                                                    ],
                                                    "default": "",
                                                    "pattern": "^(?!.*<[^>]+>).*$"
                                                  },
                                                  "individualDetails": {
                                                    "title": "Individual Details",
                                                    "description": "Individual Details",
                                                    "type": "object",
                                                    "properties": {
                                                      "title": {
                                                        "description": "Title of individual",
                                                        "title": "Title",
                                                        "type": "string",
                                                        "examples": [
                                                          "Mr"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualForenames": {
                                                        "description": "Forename of party",
                                                        "title": "Individual Forenames",
                                                        "type": "string",
                                                        "examples": [
                                                          "John Smith"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualMiddleName": {
                                                        "description": "Middle name of the individual",
                                                        "title": "Individual Middle Name",
                                                        "type": "string",
                                                        "examples": [
                                                          "MiddleName"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualSurname": {
                                                        "description": "Surname of party",
                                                        "title": "Individual Surname",
                                                        "type": "string",
                                                        "examples": [
                                                          "Surname"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      }
                                                    }
                                                  }
                                                }
                                              }
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                },
                                "channel": {
                                  "type": "array",
                                  "items": {
                                    "type": "string",
                                    "description": "Channel if different from in court",
                                    "title": "Sitting Channel",
                                    "examples": [
                                      "VIDEO HEARING"
                                    ],
                                    "default": "",
                                    "pattern": "^(?!.*<[^>]+>).*$"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
