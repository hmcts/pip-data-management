{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "array",
  "items": {
    "title": "Hearing list",
    "type": "object",
    "required": [
      "time",
      "caseReferenceNumber",
      "respondent",
      "hearingType",
      "venue",
      "timeEstimate"
    ],
    "properties": {
      "time": {
        "title": "Time of hearing",
        "type": "string",
        "default": "",
        "examples": [
          "10:30am"
        ],
        "pattern": "^\\d{1,2}([:.]\\d{2})?[ap]m\\s*$"
      },
      "caseReferenceNumber": {
        "title": "Case reference number",
        "type": "string",
        "default": "",
        "examples": [
          "1234"
        ],
        "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
      },
      "respondent": {
        "title": "Respondent name",
        "type": "string",
        "default": "",
        "examples": [
          "This is a respondent"
        ],
        "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
      },
      "hearingType": {
        "title": "Type of hearing being presented",
        "type": "string",
        "default": "",
        "examples": [
          "mda"
        ],
        "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
      },
      "venue": {
        "title": "Venue name",
        "type": "string",
        "default": "",
        "examples": [
          "This is venue name"
        ],
        "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
      },
      "timeEstimate": {
        "title": "Time estimate",
        "type": "string",
        "default": "",
        "examples": [
          "2hrs"
        ],
        "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
      }
    }
  }
}
