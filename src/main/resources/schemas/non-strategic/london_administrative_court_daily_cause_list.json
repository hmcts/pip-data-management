{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "required": [
    "hearingList",
    "planningCourt"
  ],
  "properties": {
    "hearingList": {
      "title": "Hearing list",
      "type": "array",
      "items": {
        "required": [
          "venue",
          "judge",
          "time",
          "caseNumber",
          "caseDetails",
          "hearingType",
          "additionalInformation"
        ],
        "properties": {
          "venue": {
            "title": "Venue name of the hearing",
            "type": "string",
            "default": "",
            "examples": [
              "This is the venue of the hearing"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "judge": {
            "title": "Judge name",
            "type": "string",
            "default": "",
            "examples": [
              "Judge name"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "time": {
            "title": "Time of hearing",
            "type": "string",
            "default": "",
            "examples": [
              "10:30am"
            ],
            "pattern": "^\\d{1,2}([:.]\\d{2})?[ap]m$"
          },
          "caseNumber": {
            "title": "Case reference number",
            "type": "string",
            "default": "",
            "examples": [
              "1234"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "caseDetails": {
            "title": "Details of the case",
            "type": "string",
            "default": "",
            "examples": [
              "This is case details"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "hearingType": {
            "title": "Type of hearing being presented",
            "type": "string",
            "default": "",
            "examples": [
              "mda"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "additionalInformation": {
            "title": "Additional information",
            "type": "string",
            "default": "",
            "examples": [
              "This is additional information"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          }
        }
      }
    },
    "planningCourt": {
      "title": "Planning Court",
      "type": "array",
      "items": {
        "required": [
          "venue",
          "judge",
          "time",
          "caseNumber",
          "caseDetails",
          "hearingType",
          "additionalInformation"
        ],
        "properties": {
          "venue": {
            "title": "Venue name of the hearing",
            "type": "string",
            "default": "",
            "examples": [
              "This is the venue of the hearing"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "judge": {
            "title": "Judge name",
            "type": "string",
            "default": "",
            "examples": [
              "Judge name"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "time": {
            "title": "Time of hearing",
            "type": "string",
            "default": "",
            "examples": [
              "10:30am"
            ],
            "pattern": "^\\d{1,2}([:.]\\d{2})?[ap]m$"
          },
          "caseNumber": {
            "title": "Case reference number",
            "type": "string",
            "default": "",
            "examples": [
              "1234"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "caseDetails": {
            "title": "Details of the case",
            "type": "string",
            "default": "",
            "examples": [
              "This is case details"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "hearingType": {
            "title": "Type of hearing being presented",
            "type": "string",
            "default": "",
            "examples": [
              "mda"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          },
          "additionalInformation": {
            "title": "Additional information",
            "type": "string",
            "default": "",
            "examples": [
              "This is additional information"
            ],
            "pattern": "^(?!(.|\\r|\\n)*<[^>]+>)(.|\\r|\\n)*$"
          }
        }
      }
    }
  }
}
