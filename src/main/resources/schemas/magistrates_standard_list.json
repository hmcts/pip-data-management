{
  "$defs": {
    "address": {
      "title": "Address Details",
      "type": "object",
      "properties": {
        "line": {
          "title": "Address Line",
          "type": "array",
          "default": [],
          "items": {
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": [
              "THE LAW COURTS"
            ],
            "pattern": "^(?!.*<[^>]+>).*$"
          }
        },
        "town": {
          "title": "Town",
          "description": "The town for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridge"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "county": {
          "title": "County",
          "description": "The county for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridgeshire"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "postCode": {
          "title": "Address Postcode",
          "type": "string",
          "default": "",
          "examples": [
            "PR1 2LL"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "judiciary": {
      "title": "Judiciary",
      "description": "An array of judiciary",
      "type": "object",
      "properties": {
        "johTitle": {
          "description": "The title for the judiciary",
          "title": "Judiciary Title",
          "type": "string",
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "johNameSurname": {
          "description": "First and Surname of the JOH",
          "title": "JOH Name",
          "type": "string",
          "examples": [
            "John Smith"
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "role": {
          "description": "Role of the judiciary",
          "title": "Role",
          "type": "string",
          "enum": [
            "JUDGE",
            "MAGISTRATE",
            "CLERK"
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "johKnownAs": {
          "description": "Name and salutations, titles to be presented on publications",
          "title": "JOH Known As",
          "type": "string",
          "examples": [
            "judge"
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "isPresiding": {
          "description": "A flag to indicate whether a judiciary is presiding",
          "title": "Is Presiding",
          "type": "boolean",
          "examples": [
            true
          ],
          "default": "",
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "required": [
    "document",
    "venue",
    "courtLists"
  ],
  "properties": {
    "@schemaLocation": {
      "title": "@schemalocation",
      "type": "string",
      "default": "",
      "examples": [
        "https://json-schema.org/draft/2020-12/schema"
      ],
      "pattern": "^(?!.*<[^>]+>).*$"
    },
    "document": {
      "title": "document",
      "type": "object",
      "required": [
        "publicationDate"
      ],
      "properties": {
        "publicationDate": {
          "title": "Publication date",
          "description": "The date + time the list was published",
          "type": "string",
          "examples": [
            "2016-09-13T23:30:52.123Z"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "version": {
          "title": "Version",
          "type": "string",
          "default": "",
          "examples": [
            "1.0"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "venue": {
      "title": "venue",
      "type": "object",
      "required": [
        "venueName"
      ],
      "properties": {
        "venueName": {
          "description": "Full venue name",
          "title": "Venue Name",
          "type": "string",
          "default": "",
          "examples": [
            "Preston"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueAddress": {
          "description": "Full venue address",
          "$ref": "#/$defs/address"
        }
      }
    },
    "locationDetails": {
      "title": "Location Details",
      "type": "object",
      "properties": {
        "jurisdiction": {
          "description": "Jurisdiction",
          "title": "Jurisdiction",
          "type": "string",
          "default": "",
          "examples": [
            "Family court"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "courtLists": {
      "title": "Court Lists",
      "type": "array",
      "items": {
        "title": "Court list",
        "type": "object",
        "required": [
          "courtHouse"
        ],
        "properties": {
          "courtHouse": {
            "title": "Court House",
            "description": "The court house that owns the court rooms",
            "required": [
              "courtHouseName",
              "courtRoom"
            ],
            "type": "object",
            "properties": {
              "courtHouseName": {
                "description": "Name of the court house",
                "title": "Court House Name",
                "type": "string",
                "default": "",
                "examples": [
                  "PRESTON"
                ],
                "pattern": "^(?!.*<[^>]+>).*$"
              },
              "courtRoom": {
                "type": "array",
                "items": {
                  "title": "Court Room",
                  "description": "The court room that owns the court rooms",
                  "type": "object",
                  "required": [
                    "session"
                  ],
                  "properties": {
                    "session": {
                      "type": "array",
                      "items": {
                        "title": "Session",
                        "description": "Session associated with the court in the publication",
                        "required": [
                          "sittings"
                        ],
                        "type": "object",
                        "properties": {
                          "judiciary": {
                            "type": "array",
                            "description": "Judiciary for the session",
                            "title": "Judiciary",
                            "items": {
                              "type": "object",
                              "$ref": "#/$defs/judiciary"
                            }
                          },
                          "sittings": {
                            "title": "Sittings",
                            "type": "array",
                            "default": [],
                            "items": {
                              "type": "object",
                              "required": [
                                "sittingStart",
                                "sittingEnd",
                                "hearing"
                              ],
                              "properties": {
                                "sittingStart": {
                                  "description": "Sitting Start Time",
                                  "title": "Sitting Start",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "sittingEnd": {
                                  "description": "Sitting End Time",
                                  "title": "Sitting End",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "hearing": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "description": "Hearing details of the case and associated details for the sitting",
                                    "title": "Hearing",
                                    "required": [
                                      "case"
                                    ],
                                    "properties": {
                                      "hearingType": {
                                        "description": "Type of hearing being presented",
                                        "title": "Hearing Type",
                                        "type": "string",
                                        "examples": [
                                          "mda"
                                        ],
                                        "default": "",
                                        "pattern": "^(?!.*<[^>]+>).*$"
                                      },
                                      "case": {
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "title": "Case",
                                          "required": [
                                            "caseNumber"
                                          ],
                                          "description": "Case Details",
                                          "properties": {
                                            "caseNumber": {
                                              "title": "Case Number",
                                              "description": "A number identifying a case",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "45684548"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "reportingRestrictionDetail": {
                                              "title": "Reporting Restrictions Detail",
                                              "description": "The detail / wording of any reporting restrictions attached to the offence",
                                              "type": "array",
                                              "items": {
                                                "type": "string",
                                                "default": "",
                                                "examples": [
                                                  "This is a reporting restrictions detail"
                                                ],
                                                "pattern": "^(?!.*<[^>]+>).*$"
                                              }
                                            },
                                            "caseSequenceIndicator": {
                                              "title": "Case Sequence Indicator",
                                              "description": "The case sequence indicator",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "2 of 3"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "party": {
                                              "title": "Party",
                                              "description": "Parties involved in the case (defence, prosecution)",
                                              "type": "array",
                                              "items": {
                                                "title": "Party",
                                                "description": "A party",
                                                "type": "object",
                                                "properties": {
                                                  "partyRole": {
                                                    "description": "Role of the party, selectable list of roles, i.e. prosecution, solicitor defence etc",
                                                    "title": "Party Role",
                                                    "type": "string",
                                                    "examples": [
                                                      "DEFENDANT"
                                                    ],
                                                    "default": "",
                                                    "pattern": "^(?!.*<[^>]+>).*$"
                                                  },
                                                  "friendlyRoleName": {
                                                    "description": "The descriptive version of the role. E.g a party role of APPLICANT_REPRESENTATIVE",
                                                    "title": "Friendly Role Name",
                                                    "type": "string",
                                                    "examples": [
                                                      "Legal Advisor"
                                                    ],
                                                    "default": "",
                                                    "pattern": "^(?!.*<[^>]+>).*$"
                                                  },
                                                  "individualDetails": {
                                                    "title": "Individual Details",
                                                    "description": "Individual Details",
                                                    "type": "object",
                                                    "properties": {
                                                      "title": {
                                                        "description": "Title of individual",
                                                        "title": "Title",
                                                        "type": "string",
                                                        "examples": [
                                                          "Mr"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualForenames": {
                                                        "description": "Forename of party",
                                                        "title": "Individual Forenames",
                                                        "type": "string",
                                                        "examples": [
                                                          "John Smith"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualMiddleName": {
                                                        "description": "Middle name of the individual",
                                                        "title": "Individual Middle Name",
                                                        "type": "string",
                                                        "examples": [
                                                          "MiddleName"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualSurname": {
                                                        "description": "Surname of party",
                                                        "title": "Individual Surname",
                                                        "type": "string",
                                                        "examples": [
                                                          "Surname"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "dateOfBirth": {
                                                        "description": "Date of birth for user (not mandated for all parties)",
                                                        "title": "Date Of Birth",
                                                        "type": "string",
                                                        "examples": [
                                                          "01-01-1901"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "age": {
                                                        "description": "Date of birth for user (not mandated for all parties)",
                                                        "title": "Age",
                                                        "type": "integer",
                                                        "examples": [
                                                          1
                                                        ],
                                                        "default": ""
                                                      },
                                                      "address": {
                                                        "title": "Address",
                                                        "description": "Party Address",
                                                        "$ref": "#/$defs/address"
                                                      },
                                                      "inCustody": {
                                                        "description": "If party is in custody or not",
                                                        "title": "In Custody",
                                                        "type": "boolean",
                                                        "examples": [
                                                          "true"
                                                        ],
                                                        "default": ""
                                                      },
                                                      "plea": {
                                                        "description": "If a plea has been received",
                                                        "title": "Plea",
                                                        "type": "string",
                                                        "enum": [
                                                          "GUILTY",
                                                          "NOT_GUILTY",
                                                          "NONE"
                                                        ]
                                                      },
                                                      "gender": {
                                                        "description": "Party Gender",
                                                        "title": "Gender",
                                                        "type": "string",
                                                        "examples": [
                                                          "male"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      }
                                                    }
                                                  },
                                                  "offence": {
                                                    "title": "offence",
                                                    "description": "The offence and details of offences associated with the case. It is also known as charges.",
                                                    "type": "array",
                                                    "items": {
                                                      "type": "object",
                                                      "properties": {
                                                        "offenceCode": {
                                                          "description": "Offence unique code",
                                                          "title": "Offence code",
                                                          "type": "string",
                                                          "default": "",
                                                          "examples": [
                                                            "dd01-01"
                                                          ],
                                                          "pattern": "^(?!.*<[^>]+>).*$"
                                                        },
                                                        "offenceTitle": {
                                                          "description": "Short description of offence",
                                                          "title": "Offence title",
                                                          "type": "string",
                                                          "default": "",
                                                          "examples": [
                                                            "drink driving"
                                                          ],
                                                          "pattern": "^(?!.*<[^>]+>).*$"
                                                        },
                                                        "offenceWording": {
                                                          "description": "Long description of offence",
                                                          "title": "Offence wording",
                                                          "type": "string",
                                                          "default": "",
                                                          "examples": [
                                                            "driving whilst under the influence of alcohol"
                                                          ],
                                                          "pattern": "^(?!.*<[^>]+>).*$"
                                                        },
                                                        "offenceMaxPen": {
                                                          "description": "Maximum penalty if found guilty",
                                                          "title": "Offence Max Penalty",
                                                          "type": "string",
                                                          "default": "",
                                                          "examples": [
                                                            "10yrs"
                                                          ],
                                                          "pattern": "^(?!.*<[^>]+>).*$"
                                                        },
                                                        "reportingRestriction": {
                                                          "title": "Reporting Restriction",
                                                          "description": "Any reporting restrictions posed to the offence",
                                                          "type": "boolean",
                                                          "default": "",
                                                          "examples": [
                                                            "true"
                                                          ],
                                                          "pattern": "^(?!.*<[^>]+>).*$"
                                                        },
                                                        "reportingRestrictionDetail": {
                                                          "title": "Reporting Restrictions Detail",
                                                          "description": "The detail / wording of any reporting restrictions attached to the offence",
                                                          "type": "array",
                                                          "items": {
                                                            "type": "string",
                                                            "default": "",
                                                            "examples": [
                                                              "This is a reporting restrictions detail"
                                                            ],
                                                            "pattern": "^(?!.*<[^>]+>).*$"
                                                          }
                                                        }
                                                      }
                                                    }
                                                  }
                                                }
                                              }
                                            },
                                            "informant": {
                                              "description": "Object representing an informant",
                                              "title": "Informant",
                                              "type": "object",
                                              "properties": {
                                                "prosecutionAuthorityRef": {
                                                  "title": "Prosecution Authority Ref",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    ""
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "prosecutionAuthorityId": {
                                                  "title": "Prosecution Authority Id",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    ""
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "prosecutionAuthorityCode": {
                                                  "title": "Prosecution Authority Code",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    ""
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "prosecutionAuthorityName": {
                                                  "title": "Prosecution Authority Name",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    ""
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                }
                                              }
                                            },
                                            "hearingNumber": {
                                              "title": "Hearing number",
                                              "description": "This is also known as informant number",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "12"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "convictionDate": {
                                              "title": "Conviction Date",
                                              "description": "",
                                              "type": "string",
                                              "examples": [
                                                "2016-09-13T23:30:52.123Z"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "adjournedDate": {
                                              "title": "Adjourned Date",
                                              "description": "",
                                              "type": "string",
                                              "examples": [
                                                "2016-09-13T23:30:52.123Z"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "panel": {
                                              "title": "Panel",
                                              "description": "Information about the panel",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "CHILD or ADULT"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                },
                                "judiciary": {
                                  "type": "array",
                                  "title": "Judiciary",
                                  "description": "An array of judiciary",
                                  "items": {
                                    "type": "object",
                                    "$ref": "#/$defs/judiciary"
                                  }
                                },
                                "channel": {
                                  "type": "array",
                                  "items": {
                                    "type": "string",
                                    "description": "Channel if different from in court",
                                    "title": "Sitting Channel",
                                    "examples": [
                                      "VIDEO HEARING"
                                    ],
                                    "default": "",
                                    "pattern": "^(?!.*<[^>]+>).*$"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
