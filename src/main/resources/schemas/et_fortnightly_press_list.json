{
  "$defs": {
    "address": {
      "title": "Address Details",
      "type": "object",
      "properties": {
        "line": {
          "title": "Address Line",
          "type": "array",
          "default": [],
          "items":{
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": [
              "THE LAW COURTS"
            ],
            "pattern": "^(?!.*<[^>]+>).*$"
          }
        },
        "town": {
          "title": "Town",
          "description": "The town for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridge"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "county": {
          "title": "County",
          "description": "The county for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridgeshire"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "postCode": {
          "title": "Address Postcode",
          "type": "string",
          "default": "",
          "examples": [
            "PR1 2LL"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "venueContact": {
      "title": "Contact Details for a venue",
      "type": "object",
      "properties": {
        "venueTelephone": {
          "description": "Telephone number for the venue",
          "title": "Venue Telephone",
          "type": "string",
          "default": "",
          "examples": [
            "01772 844700"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueEmail": {
          "description": "Email for the venue",
          "title": "Venue Email",
          "type": "string",
          "default": "",
          "examples": [
            "court1@moj.gov.uk"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "required": ["document", "venue", "courtLists"],
  "properties": {
    "document": {
      "title": "document",
      "type": "object",
      "required": ["publicationDate"],
      "properties": {
        "publicationDate": {
          "title": "Publication date",
          "description": "The date + time the list was published",
          "type": "string",
          "examples": [
            "2016-09-13T23:30:52.123Z"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "venue": {
      "title": "venue",
      "type": "object",
      "required": ["venueName"],
      "properties": {
        "venueName": {
          "description": "Full venue name",
          "title": "Venue Name",
          "type": "string",
          "default": "",
          "examples": [
            "Preston"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueContact": {
          "description": "Contact details for the venue",
          "title": "Venue Contact",
          "$ref": "#/$defs/venueContact"
        }
      }
    },
    "courtLists": {
      "title": "Court Lists",
      "type": "array",
      "items": {
        "title": "Court list",
        "type": "object",
        "required": ["courtHouse"],
        "properties": {
          "courtHouse": {
            "title": "Court House",
            "description": "The court house that owns the court rooms",
            "type": "object",
            "required": ["courtHouseName", "courtRoom"],
            "properties": {
              "courtHouseName": {
                "description": "Name of the court house",
                "title": "Court House Name",
                "type": "string",
                "default": "",
                "examples": [
                  "PRESTON"
                ],
                "pattern": "^(?!.*<[^>]+>).*$"
              },
              "courtHouseAddress": {
                "description": "The address for the court house",
                "title": "Court House Address",
                "$ref": "#/$defs/address"
              },
              "courtRoom": {
                "type": "array",
                "items": {
                  "title": "Court Room",
                  "description": "The court room that owns the court rooms",
                  "type": "object",
                  "required": ["session"],
                  "properties": {
                    "session": {
                      "type": "array",
                      "items": {
                        "title": "Session",
                        "description": "Session associated with the court in the publication",
                        "type": "object",
                        "required": ["sittings"],
                        "properties": {
                          "sittings": {
                            "title": "Sittings",
                            "type": "array",
                            "default": [],
                            "items":{
                              "type": "object",
                              "required": ["sittingStart", "sittingEnd", "hearing"],
                              "properties": {
                                "sittingStart": {
                                  "description": "Sitting Start Time",
                                  "title": "Sitting Start",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "sittingEnd": {
                                  "description": "Sitting End Time",
                                  "title": "Sitting End",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "hearing": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "description": "Hearing details of the case and associated details for the sitting",
                                    "title": "Hearing",
                                    "required": ["hearingType", "case"],
                                    "properties": {
                                      "hearingType": {
                                        "description": "Type of hearing being presented",
                                        "title": "Hearing Type",
                                        "type": "string",
                                        "examples": [
                                          "mda"
                                        ],
                                        "default": "",
                                        "pattern": "^(?!.*<[^>]+>).*$"
                                      },
                                      "case": {
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "title": "Case",
                                          "description": "Case Details",
                                          "required": ["caseNumber"],
                                          "properties": {
                                            "caseNumber": {
                                              "title": "Case Number",
                                              "description": "A number identifying a case",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "45684548"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "caseSequenceIndicator": {
                                              "title": "Case Sequence Indicator",
                                              "description": "The case sequence indicator",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "2 of 3"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            }
                                          }
                                        }
                                      },
                                      "party": {
                                        "title": "Party",
                                        "description": "Parties involved in the case (defence, prosecution)",
                                        "type": "array",
                                        "items": {
                                          "title": "Party",
                                          "description": "A party",
                                          "type": "object",
                                          "required": ["partyRole"],
                                          "properties": {
                                            "partyRole": {
                                              "description": "Role of the party, selectable list of roles, i.e. prosecution, solicitor defence etc",
                                              "title": "Party Role",
                                              "type": "string",
                                              "examples": [
                                                "ACCUSED", "PROSECUTOR"
                                              ],
                                              "enum": ["CLAIMANT_PETITIONER", "CLAIMANT_PETITIONER_REPRESENTATIVE", "RESPONDENT", "RESPONDENT_REPRESENTATIVE"],
                                              "default": "",
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "individualDetails": {
                                              "title": "Individual Details",
                                              "description": "Individual Details",
                                              "type": "object",
                                              "properties": {
                                                "title": {
                                                  "description": "Title of individual",
                                                  "title": "Title",
                                                  "type": "string",
                                                  "examples": [
                                                    "Mr"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualForenames": {
                                                  "description": "Forename of party",
                                                  "title": "Individual Forenames",
                                                  "type": "string",
                                                  "examples": [
                                                    "John Smith"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualMiddleName": {
                                                  "description": "Middle name of the individual",
                                                  "title": "Individual Middle Name",
                                                  "type": "string",
                                                  "examples": [
                                                    "MiddleName"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualSurname": {
                                                  "description": "Surname of party",
                                                  "title": "Individual Surname",
                                                  "type": "string",
                                                  "examples": [
                                                    "Surname"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                }
                                              }
                                            }
                                          }

                                        }
                                      }
                                    }
                                  }
                                },
                                "channel": {
                                  "type": "array",
                                  "items": {
                                    "description": "Channel if different from in court",
                                    "title": "Sitting Channel",
                                    "type": "string",
                                    "examples": [
                                      "VIDEO HEARING"
                                    ],
                                    "default": "",
                                    "pattern": "^(?!.*<[^>]+>).*$"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
