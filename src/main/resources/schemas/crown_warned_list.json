{
  "$defs": {
    "address": {
      "title": "Address Details",
      "type": "object",
      "properties": {
        "line": {
          "title": "Address Line",
          "type": "array",
          "default": [],
          "items":{
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": [
              "THE LAW COURTS"
            ],
            "pattern": "^(?!.*<[^>]+>).*$"
          }
        },
        "town": {
          "title": "Town",
          "description": "The town for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridge"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "county": {
          "title": "County",
          "description": "The county for the address",
          "type": "string",
          "default": "",
          "examples": [
            "Cambridgeshire"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "postCode": {
          "title": "Address Postcode",
          "type": "string",
          "default": "",
          "examples": [
            "PR1 2LL"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "required": [
    "document",
    "venue",
    "courtLists"
  ],
  "properties": {
    "@schemaLocation": {
      "title": "@schemalocation",
      "type": "string",
      "default": "",
      "examples": [
        "https://json-schema.org/draft/2020-12/schema"
      ],
      "pattern": "^(?!.*<[^>]+>).*$"
    },
    "document": {
      "title": "document",
      "type": "object",
      "required": [
        "publicationDate"
      ],
      "properties": {
        "documentName": {
          "description": "Defined for the title of a publications",
          "title": "Document Name",
          "type": "string",
          "default": "",
          "examples": [
            "Standard List FINAL V4"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "publicationDate": {
          "title": "Publication date",
          "description": "The date + time the list was published",
          "type": "string",
          "examples": [
            "2016-09-13T23:30:52.123Z"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "version": {
          "title": "Version",
          "type": "string",
          "default": "",
          "examples": [
            "1.0"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        }
      }
    },
    "venue": {
      "title": "venue",
      "type": "object",
      "required": [
        "venueName",
        "venueAddress"
      ],
      "properties": {
        "venueName": {
          "description": "Full venue name",
          "title": "Venue Name",
          "type": "string",
          "default": "",
          "examples": [
            "Preston"
          ],
          "pattern": "^(?!.*<[^>]+>).*$"
        },
        "venueAddress": {
          "description": "Full venue address",
          "$ref": "#/$defs/address",
          "required": ["line", "postCode"]
        }
      }
    },
    "courtLists": {
      "title": "Court Lists",
      "type": "array",
      "items": {
        "title": "Court list",
        "type": "object",
        "required": [
          "courtHouse"
        ],
        "properties": {
          "courtHouse": {
            "title": "Court House",
            "description": "The court house that owns the court rooms",
            "type": "object",
            "required": [
              "courtRoom"
            ],
            "properties": {
              "courtRoom": {
                "type": "array",
                "items": {
                  "title": "Court Room",
                  "description": "The court room that owns the court rooms",
                  "type": "object",
                  "required": [
                    "session"
                  ],
                  "properties": {
                    "session": {
                      "type": "array",
                      "items": {
                        "title": "Session",
                        "description": "Session associated with the court in the publication",
                        "type": "object",
                        "required": [
                          "sittings"
                        ],
                        "properties": {
                          "sittings": {
                            "title": "Sittings",
                            "type": "array",
                            "default": [],
                            "items":{
                              "type": "object",
                              "required": [
                                "hearing"
                              ],
                              "properties": {
                                "sittingStart": {
                                  "description": "Sitting Start Time",
                                  "title": "Sitting Start",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "sittingEnd": {
                                  "description": "Sitting End Time",
                                  "title": "Sitting End",
                                  "type": "string",
                                  "default": "",
                                  "examples": [],
                                  "pattern": "^(?!.*<[^>]+>).*$"
                                },
                                "hearing": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "description": "Hearing details of the case and associated details for the sitting",
                                    "title": "Hearing",
                                    "required": [
                                      "case"
                                    ],
                                    "properties": {
                                      "hearingType": {
                                        "description": "Type of hearing being presented",
                                        "title": "Hearing Type",
                                        "type": "string",
                                        "examples": [
                                          "mda"
                                        ],
                                        "default": "",
                                        "pattern": "^(?!.*<[^>]+>).*$"
                                      },
                                      "listNote": {
                                        "description": "Will always be required but can be null",
                                        "title": "List Note",
                                        "type": "string",
                                        "default": "",
                                        "examples": [
                                          "reserved â€“ defendant in custody"
                                        ],
                                        "pattern": "^(?!.*<[^>]+>).*$"
                                      },
                                      "case": {
                                        "type": "array",
                                        "items": {
                                          "type": "object",
                                          "title": "Case",
                                          "description": "Case Details",
                                          "required": [
                                            "caseNumber"
                                          ],
                                          "properties": {
                                            "caseNumber": {
                                              "title": "Case Number",
                                              "description": "A number identifying a case",
                                              "type": "string",
                                              "default": "",
                                              "examples": [
                                                "45684548"
                                              ],
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "reportingRestrictionDetail": {
                                              "title": "Reporting Restrictions Detail",
                                              "description": "The detail / wording of any reporting restrictions attached to the case",
                                              "type": "array",
                                              "items": {
                                                "type": "string",
                                                "default": "",
                                                "examples": [
                                                  "This is a reporting restrictions detail"
                                                ],
                                                "pattern": "^(?!.*<[^>]+>).*$"
                                              }
                                            },
                                            "caseLinked": {
                                              "title": "Information about linked cases",
                                              "type": "array",
                                              "items": {
                                                "caseId": {
                                                  "title": "Case Linked Id",
                                                  "description": "If a case is linked to another case, Id of that case will appear here.",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    "offg35484"
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "name": {
                                                  "title": "Case Name",
                                                  "description": "Case name is not always present but should be where available displayed",
                                                  "type": "string",
                                                  "default": "",
                                                  "examples": [
                                                    "A Vs B"
                                                  ],
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                }
                                              }
                                            },
                                            "party": {
                                              "title": "Party",
                                              "description": "Parties involved in the case (defence, prosecution)",
                                              "type": "array",
                                              "items": {
                                                "title": "Party",
                                                "description": "A party",
                                                "type": "object",
                                                "properties": {
                                                  "partyRole": {
                                                    "description": "Role of the party, selectable list of roles, i.e. prosecution, solicitor defence etc",
                                                    "title": "Party Role",
                                                    "type": "string",
                                                    "examples": [
                                                      "Prosecuting Authority"
                                                    ],
                                                    "default": "",
                                                    "pattern": "^(?!.*<[^>]+>).*$"
                                                  },
                                                  "friendlyRoleName": {
                                                    "description": "The descriptive version of the role. E.g a party role of APPLICANT_REPRESENTATIVE, might  have a more descriptive role name (e.g Legal Advisor) that you would want to display",
                                                    "title": "Friendly Role Name",
                                                    "type": "string",
                                                    "examples": [
                                                      "Legal Advisor"
                                                    ],
                                                    "default": "",
                                                    "pattern": "^(?!.*<[^>]+>).*$"
                                                  },
                                                  "individualDetails": {
                                                    "title": "Individual Details",
                                                    "description": "Individual Details",
                                                    "type": "object",
                                                    "properties": {
                                                      "title": {
                                                        "description": "Title of individual",
                                                        "title": "Title",
                                                        "type": "string",
                                                        "examples": [
                                                          "Mr"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualForenames": {
                                                        "description": "Forename of party",
                                                        "title": "Individual Forenames",
                                                        "type": "string",
                                                        "examples": [
                                                          "John Smith"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualMiddleName": {
                                                        "description": "Middle name of the individual",
                                                        "title": "Individual Middle Name",
                                                        "type": "string",
                                                        "examples": [
                                                          "MiddleName"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      },
                                                      "individualSurname": {
                                                        "description": "Surname of party",
                                                        "title": "Individual Surname",
                                                        "type": "string",
                                                        "examples": [
                                                          "Surname"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      }
                                                    }
                                                  },
                                                  "organisationDetails": {
                                                    "title": "Organisation Details",
                                                    "description": "Organisation Details",
                                                    "type": "object",
                                                    "properties": {
                                                      "organisationName": {
                                                        "description": "Party name of organisation",
                                                        "title": "Organisation Name",
                                                        "type": "string",
                                                        "examples": [
                                                          "A & B Solicitors"
                                                        ],
                                                        "default": "",
                                                        "pattern": "^(?!.*<[^>]+>).*$"
                                                      }
                                                    }
                                                  }
                                                }
                                              }
                                            }
                                          }
                                        }
                                      },
                                      "party": {
                                        "title": "Party",
                                        "description": "Parties involved in the case (defence, prosecution)",
                                        "type": "array",
                                        "items": {
                                          "title": "Party",
                                          "description": "A party",
                                          "type": "object",
                                          "properties": {
                                            "partyRole": {
                                              "description": "Role of the party, selectable list of roles, i.e. prosecution, solicitor defence etc",
                                              "title": "Party Role",
                                              "type": "string",
                                              "examples": [
                                                "Prosecuting Authority"
                                              ],
                                              "default": "",
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "friendlyRoleName": {
                                              "description": "The descriptive version of the role. E.g a party role of APPLICANT_REPRESENTATIVE",
                                              "title": "Friendly Role Name",
                                              "type": "string",
                                              "examples": [
                                                "Legal Advisor"
                                              ],
                                              "default": "",
                                              "pattern": "^(?!.*<[^>]+>).*$"
                                            },
                                            "individualDetails": {
                                              "title": "Individual Details",
                                              "description": "Individual Details",
                                              "type": "object",
                                              "properties": {
                                                "title": {
                                                  "description": "Title of individual",
                                                  "title": "Title",
                                                  "type": "string",
                                                  "examples": [
                                                    "Mr"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualForenames": {
                                                  "description": "Forename of party",
                                                  "title": "Individual Forenames",
                                                  "type": "string",
                                                  "examples": [
                                                    "John Smith"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualMiddleName": {
                                                  "description": "Middle name of the individual",
                                                  "title": "Individual Middle Name",
                                                  "type": "string",
                                                  "examples": [
                                                    "MiddleName"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                },
                                                "individualSurname": {
                                                  "description": "Surname of party",
                                                  "title": "Individual Surname",
                                                  "type": "string",
                                                  "examples": [
                                                    "Surname"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                }
                                              }
                                            },
                                            "organisationDetails": {
                                              "title": "Organisation Details",
                                              "description": "Organisation Details",
                                              "type": "object",
                                              "properties": {
                                                "organisationName": {
                                                  "description": "Party name of organisation",
                                                  "title": "Organisation Name",
                                                  "type": "string",
                                                  "examples": [
                                                    "A & B Solicitors"
                                                  ],
                                                  "default": "",
                                                  "pattern": "^(?!.*<[^>]+>).*$"
                                                }
                                              }
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
