{
  "openapi": "3.0.3",
  "info": {
    "title": "CaTH Data Management Service",
    "description": "Use this service for CRUD operations of court publications and Locations.",
    "contact": {
      "name": "P&I Team",
      "url": "https://tools.hmcts.net/confluence/display/PUBH/Publication+Hub",
      "email": "publicationinformation@hmcts.net"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://pip-data-management.staging.platform.hmcts.net",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Data Management Publications API",
      "description": "Publication Controller"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/publication": {
      "post": {
        "tags": [
          "Data Management Publications API"
        ],
        "summary": "Upload a new publication",
        "operationId": "uploadPublication",
        "parameters": [
          {
            "name": "x-provenance",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-source-artefact-id",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "LIST",
                "JUDGEMENTS_AND_OUTCOMES",
                "GENERAL_PUBLICATION"
              ]
            }
          },
          {
            "name": "x-sensitivity",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "PUBLIC",
                "CLASSIFIED",
                "INTERNAL",
                "PRIVATE"
              ]
            }
          },
          {
            "name": "x-language",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "ENGLISH",
                "WELSH",
                "BI_LINGUAL"
              ]
            }
          },
          {
            "name": "x-display-from",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "x-display-to",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "x-list-type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "SJP_PUBLIC_LIST",
                "SJP_PRESS_LIST",
                "SJP_DELTA_PRESS_LIST",
                "SJP_PRESS_REGISTER",
                "CROWN_DAILY_LIST",
                "CROWN_FIRM_LIST",
                "CROWN_WARNED_LIST",
                "MAGISTRATES_PUBLIC_LIST",
                "MAGISTRATES_STANDARD_LIST",
                "CIVIL_DAILY_CAUSE_LIST",
                "FAMILY_DAILY_CAUSE_LIST",
                "CIVIL_AND_FAMILY_DAILY_CAUSE_LIST",
                "COP_DAILY_CAUSE_LIST",
                "ET_FORTNIGHTLY_PRESS_LIST",
                "ET_DAILY_LIST",
                "SSCS_DAILY_LIST",
                "SSCS_DAILY_LIST_ADDITIONAL_HEARINGS",
                "IAC_DAILY_LIST",
                "CARE_STANDARDS_LIST",
                "PRIMARY_HEALTH_LIST",
                "OPA_PRESS_LIST",
                "OPA_PUBLIC_LIST",
                "OPA_RESULTS"
              ]
            }
          },
          {
            "name": "x-court-id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-content-date",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "x-issuer-email",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "multipart/form-data": {
              "schema": {
                "required": [
                  "file"
                ],
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Artefact.class instance for the artefact that has been created",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          },
          "401": {
            "description": "Invalid access credential",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          },
          "403": {
            "description": "User has not been authorized",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          },
          "409": {
            "description": "Conflict while uploading publication",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Data Management root API"
        ],
        "summary": "Get Welcome",
        "operationId": "welcome",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid access credential",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          },
          "403": {
            "description": "User has not been authorized",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Artefact"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Artefact": {
        "title": "Artefact",
        "type": "object",
        "properties": {
          "artefactId": {
            "type": "string",
            "format": "uuid"
          },
          "contentDate": {
            "type": "string",
            "format": "date-time"
          },
          "courtId": {
            "type": "string"
          },
          "displayFrom": {
            "type": "string",
            "format": "date-time"
          },
          "displayTo": {
            "type": "string",
            "format": "date-time"
          },
          "isFlatFile": {
            "type": "boolean"
          },
          "language": {
            "type": "string",
            "enum": [
              "BI_LINGUAL",
              "ENGLISH",
              "WELSH"
            ]
          },
          "listType": {
            "type": "string",
            "enum": [
              "CIVIL_DAILY_CAUSE_LIST",
              "CROWN_DAILY_LIST",
              "CROWN_FIRM_LIST",
              "CROWN_WARNED_LIST",
              "FAMILY_DAILY_CAUSE_LIST",
              "CIVIL_AND_FAMILY_DAILY_CAUSE_LIST",
              "MAGISTRATES_PUBLIC_LIST",
              "MAGISTRATES_STANDARD_LIST",
              "SJP_PRESS_LIST",
              "SJP_PUBLIC_LIST",
              "SSCS_DAILY_LIST",
              "ET_FORTNIGHTLY_PRESS_LIST",
              "ET_DAILY_LIST",
              "IAC_DAILY_LIST",
              "CARE_STANDARDS_LIST",
              "PRIMARY_HEALTH_LIST",
              "OPA_PRESS_LIST",
              "OPA_PUBLIC_LIST",
              "OPA_RESULTS"
            ]
          },
          "payload": {
            "type": "string"
          },
          "provenance": {
            "type": "string"
          },
          "search": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          },
          "sensitivity": {
            "type": "string",
            "enum": [
              "CLASSIFIED",
              "INTERNAL",
              "PRIVATE",
              "PUBLIC"
            ]
          },
          "sourceArtefactId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "GENERAL_PUBLICATION",
              "JUDGEMENTS_AND_OUTCOMES",
              "LIST"
            ]
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
